<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="LeonardoAndradeExamen.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:LeonardoAndradeExamen"
    Shell.FlyoutBehavior="Disabled"
    Title="LeonardoAndradeExamen">

    <TabBar>
        <!-- Tab para la página de Recarga -->
        <ShellContent
            Title="Recarga"
            Icon="recarga_icon.png"
            ContentTemplate="{DataTemplate local:LeonardoAndradeRecargaPage}" />

        <!-- Tab para la página de Nombre Completo -->
        <ShellContent
            Title="Nombre Completo"
            Icon="whip.png"
            ContentTemplate="{DataTemplate local:LeonardoAndradeNombreCompletoPage}" />
    </TabBar>

</Shell>

